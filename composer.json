{
  "name": "jot/hf-shield",
  "description": "OAuth2 routes, middlewares and validators",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "php",
    "hyperf",
    "elasticsearch",
    "oauth2"
  ],
  "autoload": {
    "psr-4": {
      "Jot\\HfShield\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Joao Zanon"
    }
  ],
  "require": {
    "php": ">=8.2",
    "hyperf/command": "^3.1",
    "hyperf/di": "^3.1",
    "hyperf/http-server": "^3.1",
    "hyperf/rate-limit": "^3.1",
    "hyperf/redis": "^3.1",
    "hyperf/session": "^3.1",
    "hyperf/swagger": "^3.1",
    "jot/hf-elastic": "^0.16.14",
    "jot/hf-repository": "^0.13",
    "jot/hf-validator": "^0.1.9",
    "league/oauth2-server": "^9.1"
  },
  "extra": {
    "hyperf": {
      "config": "Jot\\HfShield\\ConfigProvider"
    }
  },
  "require-dev": {
    "mockery/mockery": "^1.6",
    "phpunit/phpunit": "^10.5"
  },
  "autoload-dev": {
    "psr-4": {
      "Jot\\HfShieldTest\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "coverage": "phpunit --testdox --coverage-html=coverage/ --coverage-filter=src/"
  }
}
